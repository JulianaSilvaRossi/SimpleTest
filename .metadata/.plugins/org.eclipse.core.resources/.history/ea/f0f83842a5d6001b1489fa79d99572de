package com.automacao.tests;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

import com.automacao.pages.AcoesComumPage;

public class InicialPage extends AcoesComumPage {

	public InicialPage(WebDriver navegador) {
		super(navegador);
	}

	private By txtBuscar = By.xpath("//input[@id=\"inpHeaderSearch\"]");
	private By btnBuscar = By.xpath("//span[@id=\"btnHeaderSearch\"]");

	public InicialPage buscarProduto(String nomeProduto) {

		digitarTexto(txtBuscar, nomeProduto);
		return this;

	}

}
